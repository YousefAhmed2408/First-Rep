<Page x:Class="practise.Search"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:practise"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Search">

    <Grid Background="#FFFBF5F5">
        <Label Content="City" HorizontalAlignment="Left" Margin="176,43,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="city_txt" HorizontalAlignment="Left" Margin="275,43,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="154" Height="31"/>
        <Button x:Name="search_btn" Content="Search" HorizontalAlignment="Left" Margin="484,39,0,0" VerticalAlignment="Top" Height="33" Width="75" Click="search_btn_Click"/>
        <DataGrid x:Name="dg" Margin="0,318,0,10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="User name" Binding="{Binding unamee}"></DataGridTextColumn>
                <DataGridTextColumn Header="Phone number" Binding="{Binding Phonenumber}"></DataGridTextColumn>
                <DataGridTextColumn Header="Gender" Binding="{Binding gender}"></DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</Page>
